import sqlite3

conn = sqlite3.connect('app.db')
cursor = conn.cursor()

# Create users table
cursor.execute("""
CREATE TABLE IF NOT EXISTS users (
    id INTEGER PRIMARY KEY,
    name TEXT,
    email TEXT
)
""")

# Create orders table
cursor.execute("""
CREATE TABLE IF NOT EXISTS orders (
    id INTEGER PRIMARY KEY,
    user_id INTEGER,
    item TEXT
)
""")

# Insert sample data
cursor.execute("INSERT INTO users (id, name, email) VALUES (1, 'Alice', 'alice@example.com')")
cursor.execute("INSERT INTO orders (user_id, item) VALUES (1, 'Laptop'), (1, 'Mouse')")

conn.commit()
conn.close()

print("âœ… app.db created with sample data.")
